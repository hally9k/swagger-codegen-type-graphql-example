  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TS",
      "type": "node",
      "request": "launch",
      "args": ["src/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "./node_modules/ts-node/register"],
      "env": { "TS_NODE_FILES": "true" },
      "sourceMaps": true,
      "restart": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
